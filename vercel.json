{
  "trailingSlash": false,
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        { "type": "host", "value": "www.whatthemeta.io" }
      ],
      "destination": "https://whatthemeta.io/:path*",
      "permanent": true
    },
    {
      "source": "/leaderboard",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/compositions",
      "destination": "/group-composition",
      "permanent": true
    },
    {
      "source": "/all-seasons",
      "destination": "/historical-composition",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/((?!api|_next|.*\\..*).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Strict-Transport-Security", "value": "max-age=63072000; includeSubDomains; preload" },
        { "key": "X-Content-Type-Options", "value": "nosniff" }
      ]
    },
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml"
        }
      ]
    },
    {
      "source": "/robots.txt",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain"
        }
      ]
    }
  ]
} 